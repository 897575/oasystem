<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.just.oasystem.user.dao.UserDao">

    <resultMap id="userInfoMap" type="com.just.oasystem.user.model.UserInfo">
            <result column="user_no" property="userNo"/>
            <result column="user_name" property="userName"/>
            <result column="password" property="password"/>
            <result column="age" property="age"/>
            <result column="sex" property="sex"/>
            <result column="moble_phone" property="mobilePhone"/>
            <result column="status" property="status"/>
            <result column="authority" property="authority"/>
            <result column="create_time" property="createTime"/>
            <result column="creator" property="creator"/>
    </resultMap>

    <select id="getAllUserInfo" resultMap="userInfoMap">

        SELECT
              user_no,user_name,password,age,sex,mobile_phone,status,authority,create_time,creator

        FROM
              oa_user_info
    </select>

    <select id="getUserInfoByNo" resultMap="userInfoMap" parameterType="string">

        SELECT
              user_no,user_name,password,age,sex,mobile_phone,status,authority,create_time,creator

        FROM
              oa_user_info
        WHERE
              user_no = #{userNo}
    </select>

    <insert id="saveUserInfo" parameterType="com.just.oasystem.user.model.UserInfo">
        INSERT INTO
                    oa_user_info
                    (user_no,user_name,password,age,sex,mobile_phone,status,authority,create_time,creator)
                    VALUES
                    (#{userNo},#{userName},#{password},#{age},#{sex},#{mobilePhone},#{status},#{authority},now(),#{creator})
    </insert>

    <update id="updateUserInfo" parameterType="com.just.oasystem.user.model.UserInfo">
        UPDATE
               oa_user_info
               <trim prefix="set" suffixOverrides=",">
                   <if test="password!=null">
                       password = #{password},
                   </if>
                   <if test="mobilePhone!=null">
                       mobile_phone = #{mobilePhone},
                   </if>
                   <if test="status!=null">
                       status = #{status},
                   </if>
                   <if test="authority!=null">
                       authority = #{authority},
                   </if>
                   <if test="age!=null">
                       age = #{age}
                   </if>
               </trim>
        WHERE
                user_no = #{userNo}
    </update>

</mapper>